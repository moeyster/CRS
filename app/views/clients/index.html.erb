  <style>

@media 
only screen and (max-width: 760px),
(min-device-width: 768px) and (max-device-width: 1024px)  {

  /* Force table to not be like tables anymore */
  table, thead, tbody, th, td, tr { 
    display: block; 
  }
  
  /* Hide table headers (but not display: none;, for accessibility) */
  thead tr { 
    position: absolute;
    top: -9999px;
    left: -9999px;
  }
  
  tr { border: 1px solid #ccc; }
  
  td { 
    /* Behave  like a "row" */
    border: none;
    border-bottom: 1px solid #eee; 
    position: relative;
    padding-left: 100%; 
    
  }
  
  td:before { 
    /* Now like a table header */
    position: relative;
    /* Top/left values mimic padding */
    left: -1px;
    width: 45%; 
    padding-right: 3px; 
    white-space: nowrap;
  }
  
  /*
  Label the data
  */
  
  td:nth-of-type(1):before { content: "Name:"; }
  td:nth-of-type(2):before { content: "MT4 ID:"; }
  td:nth-of-type(3):before { content: "Date:"; }
  td:nth-of-type(4):before { content: "CS:"; }
  td:nth-of-type(5):before { content: "Actions:"; }


@media only screen
and (min-device-width : 320px)
and (max-device-width : 480px) {
  body {
    padding: 0;
    margin-top: 40px;
    width: 320px; 
  
  }
}
  
</style>
  <body>
<!-- Header -->

<!-- /Header -->

<!-- Main -->
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= render 'layouts/header' %>
    </div>
  <div class="col-sm-12">
    <%= render 'layouts/nav' %>
       <div class="panel panel-default">
          <div class="panel-heading">
            <div class="panel-title">
              <h4>All Clients
                <div class="pull-right">
                 
                </div>
              </h4>
            </div>
          </div>
          <div class="panel-body">
                <div class="justified">
                  <input id="pac-input" class="controls" type="text" placeholder="Search">
                  <select id="pac-input" class="form-control-justified"><option>Week</option><option>Month</option><option>All</option></select>
                  <button type="email" class="btn btn-danger justified">
                      Email
                  </button>
                  <button type="download" class="btn btn-danger justified">
                      Download
                  </button>
                </div>     
            <table class="table table-striped table-hover" width="100%" border="0" cellspacing="0" cellpadding="5">
                <thead>
                  <tr>
                    <th class="col-sm-4">Name</th>
                    <th class="col-sm-2">MT4 ID</th>
                    <th class="col-sm-2">Date</th>
                    <th class="col-sm-2">CS</th>
                    <th class="col-sm-2">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @clients.each do |c| %>
                  <tr>
                    <td><%= c.name %></td>
                    <td><%= c.mt4_id %></td>
                    <td><%= (c.updated_at + 8.hours).strftime("%d-%m-%Y %H:%M") %></td>
                    <td><%= number_to_currency(c.capital_sold) %></td>
                    <td><%= link_to edit_client_path, class: 'btn btn-default justified' do %>
                      Edit
                      <% end %>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>  
       
            <!-- center left--> 
      
  </div>
 
  </div><!--/row-->
  
</div><!--/container-->
<!-- /Main -->


<footer class="text-center">Copyright &copy; 2015 CRS<small>v1.0</small></footer>


  
